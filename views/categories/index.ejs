<!DOCTYPE html>
<html lang="en">
<head>
  <title>Liste des Catégories</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <h1 class="text-center mb-4">Liste des Catégories</h1>
    <a href="/categories/create" class="btn btn-success mb-4">Créer une nouvelle Catégorie</a>
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(categorie => { %>
        <tr>
          <td><%= categorie.id %></td>
          <td><%= categorie.nom %></td>
          <td><%= categorie.description %></td>
          <td>
            <a href="/categories/<%= categorie.id %>" class="btn btn-primary btn-sm">Voir</a>
            <a href="/categories/<%= categorie.id %>/edit" class="btn btn-warning btn-sm">Modifier</a>
            <form action="/categories/<%= categorie.id %>" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
