<!DOCTYPE html>
<html lang="en">
<head>
  <title>Modifier un Produit</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <h1 class="text-center mb-4">Modifier le Produit : <%= product.nom %></h1>
    <form action="/produits/<%= product.id %>" method="POST">
      <div class="mb-3">
        <label for="nom" class="form-label">Nom du Produit</label>
        <input type="text" id="nom" name="nom" class="form-control" value="<%= product.nom %>" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="description" class="form-control" rows="5"><%= product.description %></textarea>
      </div>
      <div class="mb-3">
        <label for="prix" class="form-label">Prix (€)</label>
        <input type="number" id="prix" name="prix" class="form-control" value="<%= product.prix %>" required min="10" max="500">
      </div>
      <div class="mb-3">
        <label for="stock" class="form-label">Stock</label>
        <input type="number" id="stock" name="stock" class="form-control" value="<%= product.stock %>" required min="0">
      </div>
      <div class="mb-3">
        <label for="codeEAN" class="form-label">Code EAN</label>
        <input type="text" id="codeEAN" name="codeEAN" class="form-control" value="<%= product.codeEAN %>" required>
      </div>
      <div class="mb-3">
        <label for="categorieId" class="form-label">Catégorie</label>
        <select id="categorieId" name="categorieId" class="form-control" required>
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>" <%= product.categorieId === category.id ? 'selected' : '' %>><%= category.nom %></option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-warning">Modifier</button>
      <a href="/produits" class="btn btn-secondary">Annuler</a>
    </form>
  </div>
</body>
</html>
