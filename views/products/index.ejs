<!DOCTYPE html>
<html lang="en">
<head>
  <title>Liste des Produits</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <h1 class="text-center mb-4">Liste des Produits</h1>
    <a href="/produits/create" class="btn btn-success mb-4">Ajouter un Nouveau Produit</a>
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Description</th>
          <th>Prix (€)</th>
          <th>Stock</th>
          <th>CodeEAN</th>
          <th>Catégorie</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.nom %></td>
          <td><%= product.description %></td>
          <td><%= product.prix %></td>
          <td><%= product.stock %></td>
          <td><%= product.codeEAN %></td>
          <td><%= product.categorieNom %></td>
          <td>
            <a href="/produits/<%= product.id %>" class="btn btn-primary btn-sm">Voir</a>
            <a href="/produits/<%= product.id %>/edit" class="btn btn-warning btn-sm">Modifier</a>
            <form action="/produits/<%= product.id %>" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>

